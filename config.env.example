# WaveQ Audio MCP Server Environment Configuration
# העתק קובץ זה ל-config.env וערוך את הערכים

# MQTT Configuration
MCP_MQTT_BROKER=mqtt-broker
MCP_MQTT_PORT=1883
MCP_MQTT_USERNAME=
MCP_MQTT_PASSWORD=

# API Gateway Configuration
API_HOST=0.0.0.0
API_PORT=8002
API_DEBUG=false
API_LOG_LEVEL=INFO

# Security: Host and Port Configuration
HOST=0.0.0.0
PORT=8001
DEBUG=false

# MCP Server Configuration
MCP_HOST=0.0.0.0
MCP_PORT=1883
MCP_LOG_LEVEL=INFO
MCP_MAX_CONCURRENT_REQUESTS=50

# File Storage Configuration
UPLOAD_DIR=uploads
PROCESSED_DIR=processed
AUDIO_FILES_DIR=audio-files
LOGS_DIR=logs
MAX_FILE_SIZE=100MB
ALLOWED_AUDIO_FORMATS=wav,mp3,flac,aac,ogg

# Security Configuration
API_KEY_REQUIRED=true
API_KEY_HEADER=X-API-Key
API_KEY=your_secure_api_key_here
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8001"]
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Database Configuration (Optional)
POSTGRES_DB=waveq_audio
POSTGRES_USER=waveq_user
POSTGRES_PASSWORD=your_secure_db_password_here
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@localhost:5432/${POSTGRES_DB}
DATABASE_ECHO=false

# Redis Configuration (Optional)
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_URL=redis://:${REDIS_PASSWORD}@localhost:6379
REDIS_DB=0

# Redis Configuration (Optional)
REDIS_URL=redis://localhost:6379
REDIS_DB=0

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30

# Audio Processing Configuration
DEFAULT_AUDIO_QUALITY=high
MAX_PROCESSING_TIME=300
TEMP_FILE_CLEANUP_INTERVAL=3600

# Notification Configuration
SLACK_WEBHOOK_URL=
TELEGRAM_BOT_TOKEN=
EMAIL_SMTP_SERVER=
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=
EMAIL_PASSWORD=

# Logging Configuration
LOG_FORMAT=json
LOG_LEVEL=INFO
LOG_FILE=waveq_audio.log
LOG_MAX_SIZE=100MB
LOG_BACKUP_COUNT=5
